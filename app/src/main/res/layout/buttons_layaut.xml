<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:visibility="visible">

    <GridLayout
        android:id="@+id/gridTopButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="1">


        <!-- Botón Raiz -->
        <Button
            android:id="@+id/btnRoot"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:onClick="showOptions"
            android:text="√"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <!-- Botón Pi -->
        <Button
            android:id="@+id/btnPi"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:onClick="showOptions"
            android:text="π"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Botón Potencia (^) -->
        <Button
            android:id="@+id/btnPower"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:onClick="showOptions"
            android:text="^"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Botón Factorial (!) -->
        <Button
            android:id="@+id/btnFactorial"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:onClick="showOptions"
            android:text="!"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Botón Mayor (v) -->
        <Button
            android:id="@+id/btnGreater"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_columnWeight=".5"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:onClick="showOptions"
            android:text="v"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </GridLayout>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="5">

        <!-- Operadores -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="-"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="X"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="2"
            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="/"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="%"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="24sp" />

        <!-- Botón de Borrar -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="borrar"
            android:text="AC"
            android:textColor="@color/black"
            android:backgroundTint="@color/pastel_green"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="masmenos"
            android:text="+/-"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="25sp" />

        <!-- Números -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="7"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="8"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="9"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="4"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="5"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="6"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="2"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="3"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />

        <!-- Operador de Suma -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="+"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="24sp" />

        <!-- Botón de Cero -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="0"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="seleccionarNumero"
            android:text="."
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />

        <!-- Botón de Igual -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="borrar"
            android:text="⌫"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:textSize="24sp" />



        <!-- Botón de Signo +/- -->
        <Button
            android:layout_width="53dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="igual"
            android:text="="
            android:textColor="@color/white"
            android:backgroundTint="@color/pastel_blue"
            android:textSize="24sp" />

    </GridLayout>


</LinearLayout>
